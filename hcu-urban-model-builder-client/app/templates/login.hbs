{{page-title (t "routes.login.title")}}

<div class="container main-content landingpage">
  <div class="card card--login w-75 w-md-50">
    <div class="card-header">
      <h2 class="h3">
        {{t "actions.login"}}
      </h2>
    </div>
    <div class="card-body">
      <LinkTo
        @route="authenticate"
        class="btn btn-primary"
        aria-pressed="false"
      >
        <span>
          {{t "actions.login"}}
        </span>
        <FaIcon @icon="right-to-bracket" />
      </LinkTo>
      <a
        class="btn btn-secondary"
        role="button"
        href="{{this.registrationUrl}}"
      >
        {{t "actions.register"}}
      </a>
    </div>
  </div>
</div>