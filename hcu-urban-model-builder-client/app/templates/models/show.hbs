{{page-title "Show"}}

<BreadcrumbsItem>
  {{this.model.name}}
</BreadcrumbsItem>

{{#in-element this.navbar}}
  <BsButton @type="primary" @size="sm" @onClick={{fn (mut this.showSimulateModal) true}}>
    Simulate
  </BsButton>
{{/in-element}}

<ReactWrapper @model={{this.model}} />
<SimulateModal
  @model={{this.model}}
  @show={{this.showSimulateModal}}
  @onHide={{fn (mut this.showSimulateModal) false}}
/>

{{outlet}}