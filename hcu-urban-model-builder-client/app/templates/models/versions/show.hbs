{{page-title "Show"}}

<ReactWrapper @model={{this.model}} />

<SidebarGeneral
  @model={{this.model}}
  @navbar={{this.navbar}}
  @onToggleSettingsModal={{this.hideSettingsDialog}}
  @onCreateNewDraftVersion={{this.onCreateNewDraftVersion}}
  @onStartPublish={{this.onStartPublish}}
  @onStartClone={{this.onStartClone}}
  @onStartShare={{this.onStartShare}}
  @onShowSimulateDialog={{this.onShowSimulateDialog}}
  @onShowSettingsDialog={{this.onShowSettingsDialog}}
/>

<SimulateModal
  @model={{this.model}}
  @show={{this.showSimulateModal}}
  @onHide={{fn (mut this.showSimulateModal) false}}
/>

<Model::PublishDialog
  @open={{this.showPublishModal}}
  @model={{this.model}}
  @onClose={{this.hidePublishingDialog}}
/>

<Model::CloneDialog
  @open={{this.showCloneModal}}
  @model={{this.model}}
  @onClose={{this.hideCloneDialog}}
/>

<Model::ShareModal
  @open={{this.showShareModal}}
  @model={{this.model.model}}
  @modelVersion={{this.model}}
  @onClose={{this.hideShareDialog}}
/>

<Model::SettingsDialog
  @open={{this.showSettingsModal}}
  @model={{this.model}}
  @onClose={{this.hideSettingsDialog}}
/>