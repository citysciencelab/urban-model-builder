{{#if (eq this.type "node")}}
  <div class="sidebar">
    <div class="sidebar__header">
      <h3>
        {{this.name}}
      </h3>
    </div>
    <div
      class="sidebar__content"
      {{did-insert this.initialize}}
      {{did-update this.initialize @record}}
    >
      <BsAlert
        @type="danger"
        @dismissible={{false}}
        @visible={{this.hasErrors}}
      >
        There is an error in the form. Please fix it to save.
      </BsAlert>
      {{#if this.isGhostNode}}
        <div class="alert alert-warning">
          ðŸ‘» {{t "forms.node.ghost_warning"}}
        </div>
      {{/if}}
      <BsForm
        @model={{this.changeset.dataProxy}}
        @disabled={{@disabled}} as |form|
      >
        <form.element
          @controlType="text"
          @label="Name"
          @placeholder="Name"
          @property="name"
          @customError={{get this.errors "name"}}
        />

        <form.element
          @controlType="textarea"
          @label="Description"
          @placeholder="Description"
          @property="description"
          @customError={{get this.errors "description"}}
        />

        {{#if this.nodeFormFieldsComponent}}
          <this.nodeFormFieldsComponent
            @form={{form}}
            @node={{this.record}}
            @changeset={{this.changeset}}
            @errors={{this.errors}}
          />
        {{/if}}

        <div {{did-update this.onIsDirtyChanged this.isDirty}}></div>
      </BsForm>
      {{! DELETE Button }}
      <div class="node__delete-button-wrapper">
        <button
          type="button"
          class="btn btn-danger"
          disabled={{@disabled}}
          {{on "click" this.deleteNode}}
        >
          Delete
        </button>
      </div>
    </div>
  </div>
{{/if}}