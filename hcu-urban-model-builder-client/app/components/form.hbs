{{#if (eq this.type "node")}}
  <div class="sidebar">
    <div class="sidebar__header">
      <h3>
        {{this.name}}
      </h3>
    </div>
    <div class="sidebar__content">
      {{#if this.isGhostNode}}
        <div class="alert alert-warning">
          ðŸ‘» {{t "forms.node.ghost_warning"}}
        </div>
      {{/if}}
      <BsForm
        @onSubmit={{this.onSave}}
        @model={{this.record}}
        @disabled={{@disabled}} as |form|
      >
        <form.element
          @controlType="text"
          @label="Name"
          @placeholder="Name"
          @property="name"
        />

        {{#if this.nodeFormFieldsComponent}}
          <this.nodeFormFieldsComponent @form={{form}} @node={{this.record}} />
        {{/if}}

        <form.submitButton>
          {{t "actions.save"}}
        </form.submitButton>
      </BsForm>
    </div>
  </div>
{{/if}}