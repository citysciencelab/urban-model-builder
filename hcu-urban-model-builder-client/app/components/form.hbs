{{#if (eq this.type "node")}}
  <div class="sidebar">
    <div class="sidebar__header">
      <h3>
        {{this.name}}
      </h3>
    </div>
    <div
      class="sidebar__content"
      {{did-insert this.initialize}}
      {{did-update this.initialize @record}}
    >
      {{#if this.isGhostNode}}
        <div class="alert alert-warning">
          ðŸ‘» {{t "forms.node.ghost_warning"}}
        </div>
      {{/if}}
      <BsForm
        @onSubmit={{this.onSave}}
        @model={{this.changeset}}
        @disabled={{@disabled}} as |form|
      >
        <form.element
          @controlType="text"
          @label="Name"
          @placeholder="Name"
          @property="name"
        />

        {{#if this.nodeFormFieldsComponent}}
          <this.nodeFormFieldsComponent
            @form={{form}}
            @node={{this.record}}
            @changeset={{this.changeset}}
          />
        {{/if}}

        <div {{did-update this.onIsDirtyChanged this.isDirty}}></div>

        <form.submitButton>
          {{t "actions.save"}}
        </form.submitButton>
      </BsForm>
    </div>
  </div>
{{/if}}