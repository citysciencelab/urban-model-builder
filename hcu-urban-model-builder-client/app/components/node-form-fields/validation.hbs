<@acc.item @value="validation" @title={{t "components.validation.title"}}>
  <fieldset>
    <NodeFormFields::UnitsSelection
      @form={{@form}}
      @modelsVersion={{@modelsVersion}}
      @changeset={{@changeset}}
      @el={{@el}}
      @property="data.units"
    />

    <@form.element
      @controlType="switch"
      @label={{t "components.validation.minimum_contraint"}}
      @onChange={{fn this.handleConstraintChange "min"}}
      @value={{is-numeric @changeset.dataProxy.data.constraints.min}}
    />

    {{#if (is-numeric @changeset.dataProxy.data.constraints.min)}}
      <@form.element
        @controlType="number"
        @label={{t "components.validation.minimum_value"}}
        @property="data.constraints.min"
        @customError={{get @errors "data.constraints.min"}}
        @onChange={{fn (mut-number @changeset.dataProxy.data.constraints.min)}}
        as |el|
      >
        <el.control step={{0.001}} />
      </@form.element>
    {{/if}}

    <@form.element
      @controlType="switch"
      @label={{t "components.validation.maximum_contraint"}}
      @onChange={{fn this.handleConstraintChange "max"}}
      @value={{is-numeric @changeset.dataProxy.data.constraints.max}}
    />

    {{#if (is-numeric @changeset.dataProxy.data.constraints.max)}}
      <@form.element
        @controlType="number"
        @label={{t "components.validation.maximum_value"}}
        @property="data.constraints.max"
        @customError={{get @errors "data.constraints.max"}}
        @onChange={{fn (mut-number @changeset.dataProxy.data.constraints.max)}}
        as |el|
      >
        <el.control step={{0.001}} />
      </@form.element>
    {{/if}}
  </fieldset>
</@acc.item>