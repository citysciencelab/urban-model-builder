<@form.element @controlType="text" @label="Unit" @property="data.units" />

<@form.element
  @controlType="switch"
  @label="Minimum Contraint"
  @onChange={{fn this.handleConstraintChange "min"}}
  @value={{is-numeric @node.data.constraints.min}}
/>

{{#if (is-numeric @node.data.constraints.min)}}
  <@form.element
    @controlType="number"
    @label="Minimum Value"
    @property="data.constraints.min"
    @onChange={{fn (mut-number @node.data.constraints.min)}}
  />
{{/if}}

<@form.element
  @controlType="switch"
  @label="Maximum Contraint"
  @onChange={{fn this.handleConstraintChange "max"}}
  @value={{is-numeric @node.data.constraints.max}}
/>

{{#if (is-numeric @node.data.constraints.max)}}
  <@form.element
    @controlType="number"
    @label="Maximum Value"
    @property="data.constraints.max"
    @onChange={{fn (mut-number @node.data.constraints.max)}}
  />
{{/if}}