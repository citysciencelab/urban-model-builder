<BsAccordion class="sidebar-accordion" @selected="interface-scenario" as |acc|>
  <@form.element
    @controlType="textarea"
    @label={{t "components.state.start_active_label"}}
    @helpText={{if
      @changeset.dataProxy.isParameter
      (t "components.state.value_control_help_text")
    }}
    @property="data.startActive"
    as |el|
  >
    <NodeFormFields::Formula
      @form={{@form}}
      @node={{@node}}
      @el={{el}}
      @disabled={{or @changeset.dataProxy.isParameter @disabled}}
    >
      <el.control
        class="code-textarea"
        disabled={{or @changeset.dataProxy.isParameter @disabled}}
      />
    </NodeFormFields::Formula>
  </@form.element>

  <@form.element
    @controlType="textarea"
    @label={{t "components.state.residency_label"}}
    @property="data.residency"
    as |el|
  >
    <NodeFormFields::Formula
      @form={{@form}}
      @node={{@node}}
      @el={{el}}
      @disabled={{@disabled}}
    >
      <el.control class="code-textarea" />
    </NodeFormFields::Formula>
  </@form.element>

  <NodeFormFields::ParameterSettings
    @acc={{acc}}
    @form={{@form}}
    @changeset={{@changeset}}
    @el={{@el}}
    @errors={{@errors}}
    @type="boolean"
    @inputVisible={{true}}
    @outputVisible={{true}}
    @disabled={{@disabled}}
  />
</BsAccordion>