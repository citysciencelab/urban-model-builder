<@form.element
  @controlType="number"
  @label="Population Size"
  @property="data.populationSize"
  @onChange={{fn (mut-number @changeset.dataProxy.data.populationSize)}}
/>

<NodeFormFields::UnitsSelection
  @form={{@form}}
  @changeset={{@changeset}}
  @el={{@el}}
  @property="data.geoUnits"
/>

<@form.element
  @controlType="text"
  @label="Geo Width"
  @property="data.geoWidth"
/>

<@form.element
  @controlType="text"
  @label="Geo Height"
  @property="data.geoHeight"
/>

<@form.element
  @controlType="checkbox"
  @label="Geo Wrap Around"
  @property="data.geoWrapAround"
/>

<@form.element
  @controlType="radio"
  @label="Geo Placement Type"
  @property="data.geoPlacementType"
  @options={{this.geoPlacementTypeOptions}}
/>

<@form.element
  @controlType="text"
  @label="Geo Placement Function"
  @property="data.geoPlacementFunction"
/>

<@form.element
  @controlType="radio"
  @label="Network Type"
  @property="data.networkType"
  @options={{this.networkTypeOptions}}
/>

<@form.element
  @controlType="text"
  @label="Network Function"
  @property="data.networkFunction"
/>