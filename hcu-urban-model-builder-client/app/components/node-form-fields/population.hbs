<BsAccordion class="sidebar-accordion" @selected="interface-scenario" as |acc|>
  <@form.element
    @controlType="number"
    @label={{t "components.population.population_size_label"}}
    @property="data.populationSize"
    @onChange={{fn (mut-number @changeset.dataProxy.data.populationSize)}}
  />

  <NodeFormFields::UnitsSelection
    @form={{@form}}
    @modelsVersion={{@modelsVersion}}
    @changeset={{@changeset}}
    @el={{@el}}
    @property="data.geoUnits"
  />

  <@form.element
    @controlType="text"
    @label={{t "components.population.geo_width_label"}}
    @property="data.geoWidth"
  />

  <@form.element
    @controlType="text"
    @label={{t "components.population.geo_height_label"}}
    @property="data.geoHeight"
  />

  <@form.element
    @controlType="checkbox"
    @label={{t "components.population.geo_wrap_around_label"}}
    @property="data.geoWrapAround"
  />

  <@form.element
    @controlType="radio"
    @label={{t "components.population.geo_placement_type_label"}}
    @property="data.geoPlacementType"
    @options={{this.geoPlacementTypeOptions}}
    as |el|
  >
    <el.control as |option|>
      {{t (concat "components.population.geo_placement_type_options." option)}}
    </el.control>
  </@form.element>

  <@form.element
    @controlType="text"
    @label={{t "components.population.geo_placement_function_label"}}
    @property="data.geoPlacementFunction"
  />

  <@form.element
    @controlType="radio"
    @label={{t "components.population.network_type_label"}}
    @property="data.networkType"
    @options={{this.networkTypeOptions}}
    as |el|
  >
    <el.control as |option|>
      {{t (concat "components.population.network_type_options." option)}}
    </el.control>
  </@form.element>

  <@form.element
    @controlType="text"
    @label={{t "components.population.network_function_label"}}
    @property="data.networkFunction"
  />

  <NodeFormFields::ParameterSettings
    @acc={{acc}}
    @form={{@form}}
    @changeset={{@changeset}}
    @el={{@el}}
    @errors={{@errors}}
    @type="numeric"
    @outputVisible={{true}}
    @disabled={{@disabled}}
  />
</BsAccordion>