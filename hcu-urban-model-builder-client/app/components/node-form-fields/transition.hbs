<@form.element
  @controlType="radio"
  @label={{t "components.transition.trigger"}}
  @property="data.trigger"
  @options={{this.triggerTypeOptions}}
  as |el|
>
  <el.control as |option|>
    {{t (concat "components.transition.trigger_options." option)}}
  </el.control>
</@form.element>

<@form.element
  @controlType="textarea"
  @label={{t "components.transition.value"}}
  @property="data.value"
  as |el|
>
  <NodeFormFields::Formula
    @form={{@form}}
    @node={{@node}}
    @el={{el}}
    @disabled={{@disabled}}
  >
    <el.control class="code-textarea" />
  </NodeFormFields::Formula>
</@form.element>

<@form.element
  @controlType="switch"
  @label={{t "components.transition.recalculate"}}
  @property="data.recalculate"
/>
<@form.element
  @controlType="switch"
  @label={{t "components.transition.repeat"}}
  @property="data.repeat"
/>

<NodeFormFields::Validation
  @modelsVersion={{@modelsVersion}}
  @form={{@form}}
  @changeset={{@changeset}}
  @el={{@el}}
/>