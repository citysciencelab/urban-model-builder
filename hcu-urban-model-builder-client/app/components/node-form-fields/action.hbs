<@form.element
  @controlType="textarea"
  @label="Action"
  @property="data.action" as |el|
>
  <NodeFormFields::Formula @form={{@form}} @node={{@node}} @el={{el}}>
    <el.control class="code-textarea" />
  </NodeFormFields::Formula>
</@form.element>

<@form.element
  @controlType="radio"
  @label="Trigger"
  @property="data.trigger"
  @options={{this.triggerTypeOptions}}
/>

<@form.element
  @controlType="textarea"
  @label="Value"
  @property="data.value" as |el|
>
  <NodeFormFields::Formula @form={{@form}} @node={{@node}} @el={{el}}>
    <el.control class="code-textarea" />
  </NodeFormFields::Formula>
</@form.element>

<@form.element
  @controlType="switch"
  @label="Recalculate"
  @property="data.recalculate"
/>

<@form.element @controlType="switch" @label="Repeat" @property="data.repeat" />