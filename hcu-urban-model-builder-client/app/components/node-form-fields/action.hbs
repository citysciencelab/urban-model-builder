<@form.element
  @controlType="textarea"
  @label={{t "components.action.action_label"}}
  @property="data.action"
  as |el|
>
  <NodeFormFields::Formula
    @form={{@form}}
    @node={{@node}}
    @el={{el}}
    @disabled={{@disabled}}
  >
    <el.control class="code-textarea" />
  </NodeFormFields::Formula>
</@form.element>

<@form.element
  @controlType="radio"
  @label={{t "components.action.trigger_label"}}
  @property="data.trigger"
  @options={{this.triggerTypeOptions}}
  as |el|
>
  <el.control as |option|>
    {{t (concat "components.action.trigger_options." option)}}
  </el.control>
</@form.element>

<@form.element
  @controlType="textarea"
  @label={{t "components.action.value_label"}}
  @property="data.value"
  as |el|
>
  <NodeFormFields::Formula
    @form={{@form}}
    @node={{@node}}
    @el={{el}}
    @disabled={{@disabled}}
  >
    <el.control class="code-textarea" />
  </NodeFormFields::Formula>
</@form.element>

<@form.element
  @controlType="switch"
  @label={{t "components.action.recalculate_label"}}
  @property="data.recalculate"
/>

<@form.element
  @controlType="switch"
  @label={{t "components.action.repeat_label"}}
  @property="data.repeat"
/>